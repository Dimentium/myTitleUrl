{
	"manifest_version": 2,
	"name": "TitleURL",
	"version": "0.3",
	
	"description": "Add the current URL to the windows title bar",

	"permissions": [
		"<all_urls>", "tabs", "storage"
	],
	
	"content_scripts": [
	{
		"matches": ["<all_urls>"],
		"js": ["titleUrlPage.js"]
	}
	],
	"background": {
		"scripts": ["titleurl.js"]
	},
	
	"options_ui": {
		"page": "options/options.html",
		"browser_style": true
	}
}
